:host
  display block

#progress-bar
  width 100%
  height 100%
  z-index 2
  overflow hidden
  display flex
  padding 0 3px
  margin 3px 0
  height var(--metal-progress-bar-height, var(--metal-size--1))

span
  flex 1
  border-radius var(--metal-progress-bar-border-radius, var(--metal-border-radius--1))
  overflow hidden
  position relative

  &:not(:last-child)
    margin-right 6px

:host([solid]) span 
  margin 0
  border-radius 0

span:before, span:after
  width 100%
  height 100%
  top 0
  left 0
  content ''
  position absolute

span:after
  background var(--metal-progress-bar-color, var(--metal-color-highlight--10))

span[data-active]:after
  background var(--metal-progress-bar-color--active, var(--metal-color-highlight--100))