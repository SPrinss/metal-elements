:host
  display block

#progress-bar
  width 100%
  height 100%
  z-index 2
  overflow hidden
  display flex
  padding 0 3px
  margin 3px 0
  height var(--metal-progress-bar-height, var(--metal-size--2))

span
  flex 1
  margin 0 3px
  border-radius var(--metal-progress-bar-border-radius, var(--metal-border-radius--1))
  overflow hidden
  position relative

:host([solid]) span 
  margin 0
  border-radius 0

span:before, span:after
  width 100%
  height 100%
  top 0
  left 0
  content ''
  position absolute

span:before
  opacity 0.35

span:after
  background var(--metal-progress-bar-color, var(--metal-color-main--50))
  opacity 0.1
  transition: 0.5s opacity ease-in-out

span[data-active]:after
  opacity 1