:host
  display inline-block
  height var(--metal-button-height, var(--metal-size--7))
  vertical-align middle

:host([no-label]) button
  width var(--metal-button-height, var(--metal-size--7))
  border-radius var(--metal-button-border-radius--no-label, 50%)

button 
  background var(--metal-button-background, var(--metal-color-highlight--50))
  color var(--metal-button-color, var(--metal-color-typography--90))
  border-width var(--metal-button-border-width, 0)
  border-color var(--metal-button-border-color, var(--metal-color-ground--80))
  border-style solid
  border-radius var(--metal-button-border-radius, var(--metal-border-radius--1))
  text-align var(--metal-button-text-align, center)
  --metal-icon-color var(--metal-button-color, var(--metal-color-typography--90))
  box-shadow: var(--metal-button-box-shadow, var(--metal-box-shadow--1))

  display flex
  justify-content center
  align-items center
  width 100%
  height 100%
  margin 0
  padding 0 var(--metal-size--3)
  cursor pointer
  user-select none
  transition var(--metal-button-transition-time, var(--metal-transition-time)) all ease
  font-size var(--metal-button-font-size, var(--metal-font-size--body-3))

button:focus
  background var(--metal-button-background--focus, var(--metal-color-highlight--50))
  color var(--metal-button-color--focus, var(--metal-color-typography--90))
  border-color var(--metal-button-border-color--focus, var(--metal-color-ground--80))
  box-shadow: var(--metal-button-box-shadow--focus, var(--metal-box-shadow--3))
  --metal-icon-color var(--metal-button-color--focus, var(--metal-color-typography--90))
  outline none

button:hover
  background var(--metal-button-background--hover, var(--metal-color-highlight--40))
  color var(--metal-button-color--hover, var(--metal-color-typography--90))
  border-color var(--metal-button-border-color--hover, var(--metal-color-ground--80))
  box-shadow: var(--metal-button-box-shadow--hover, var(--metal-box-shadow--3))
  --metal-icon-color var(--metal-button-color--hover, var(--metal-color-typography--90))

button:active 
  background var(--metal-button-background--active, var(--metal-color-highlight--30))
  color var(--metal-button-color--active, var(--metal-color-typography--90))
  border-color var(--metal-button-border-color--active, var(--metal-color-ground--80))
  box-shadow: var(--metal-button-box-shadow--active, var(--metal-box-shadow--2))
  --metal-icon-color var(--metal-button-color--active, var(--metal-color-typography--90))

button:disabled
  background var(--metal-button-background--disabled, var(--metal-color-highlight--70))
  color var(--metal-button-color--disabled, var(--metal-color-typography--90))
  border-color var(--metal-button-border-color--disabled, var(--metal-color-ground--90))
  box-shadow: var(--metal-button-box-shadow--disabled, var(--metal-box-shadow--1))
  --metal-icon-color var(--metal-button-color--disabled, var(--metal-color-typography--90))
  pointer-events none
  cursor default

span 
  flex 1
  white-space nowrap
  text-overflow ellipsis
  overflow hidden

span + metal-icon 
  padding-left var(--metal-size--2)

metal-icon 
  flex none

:host([no-label]) metal-icon 
  padding 0