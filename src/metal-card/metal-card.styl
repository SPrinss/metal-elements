img
  width 100%

:host
  display flex
  flex-direction column
  background var(--metal-card-background, var(--metal-color-ground--5))
  border-radius var(--metal-card-border-radius, var(--metal-border-radius--1))
  overflow hidden

header
  max-height 300px
  flex 1

img
  width 100%
  height 100%
  object-fit var(--metal-card-object-fit, cover)

main
  flex 2
  padding var(--metal-card-padding, var(--metal-size--5))
  color var(--metal-card-color, var(--metal-color-typography--10))

h3
  margin 0
  font-weight var(--metal-card-font-weight, var(--metal-font-weight--2))