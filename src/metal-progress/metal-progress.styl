:host
  display flex
  padding 0
  margin 0
  height var(--metal-size--2)
  font-size 0

progress-value()
  height 100%
  background var(--metal-progress-value-background, var(--metal-color-highlight--100))
  border-radius var(--metal-progress-border-radius-value, var(--metal-border-radius--0))
  transform scale(0, 1)
  transform-origin 0 0
  transition-duration var(--metal-progress-transition-duration, var(--metal-transition-duration))
  transition-timing-function var(--metal-progress-transition-timing-function, var(--metal-transition-timing-function))
  transition-property transform

progress
  -webkit-appearance none
  -moz-appearance none
  height 100%
  width 100%
  border 0
  background var(--metal-progress-background, var(--metal-color-highlight--20))

  &:not(:first-of-type)
    margin-left calc( var(--metal-progress-gap, var(--metal-size--2) ) / 2);

  &:not(:last-of-type)
    margin-right calc( var(--metal-progress-gap, var(--metal-size--2) ) 2);

  &::-webkit-progress-bar
    height 100%
    background var(--metal-progress-background, var(--metal-color-highlight--20))
    border-radius var(--metal-progress-border-radius, var(--metal-border-radius--0))

  &::-webkit-progress-value
    progress-value()

  &::-moz-progress-bar
    progress-value()

  &:not([value="0"])
    &::-webkit-progress-value
      transform scale(1, 1)

    &::-moz-progress-bar
      transform scale(1, 1)

:host([solid]) progress

  &:not(:first-of-type)
    margin-left 0

  &:not(:last-of-type)
    margin-right 0
